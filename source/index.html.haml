#services
  .intro.ui.container
    %h1.header= t(:services_title)
    .ui.three.column.grid
      .column
        = image_tag('ciq_icon.svg', class: 'ui centered small image', style: 'height: 150px')
        %h4.title= t(:communication_title)
      .column
        = image_tag('story_icon.svg', class: 'ui centered small image', style: 'height: 150px')
        %h4.title= t(:story_title, class: 'ui centered small image')
      .column
        = image_tag('ccs_icon.svg', class: 'ui centered small image', style: 'height: 150px')
        %h4.title= t(:ccs_title, class: 'ui centered small image')
  .section--service
    .content{ :style => "background-image: url('./images/image_4.jpg');" }
      .ui.grid.container
        .two.wide.column
          = image_tag('ciq_icon.svg', class: 'ui small image')
        .fourteen.wide.column
          %h2.title= t(:communication_title)
          %h3.subtitle= t(:communication_subtitle)
          .quote= t(:communication_author)
          %p= t(:communication_p1)
          %p= t(:communication_p2)
          %p= t(:communication_p3)
          %p= t(:communication_p4)
          %ul.leaf
            %li= t(:comp4_list_1)
