            %li= t(:comp4_list_3)
            %li= t(:comp4_list_4)
            %li= t(:comp4_list_5)
            %li= t(:comp4_list_6)
          %p= t(:communication_p5)
          %p= t(:communication_p6)
  .section--service
    .content{ :style => "background-image: url('./images/image_5.jpg');" }
      .ui.grid.container
        .two.wide.column
          = image_tag('story_icon.svg', class: 'ui small image')
        .fourteen.wide.column
          %h2.title= t(:story_title_complete)
          %h3.subtitle= t(:story_subtitle)
          .quote= t(:story_quote)
          %p= t(:story_p1)
          %h3= t(:story_title_1)
