#header
  .ui.secondary.pointing.menu#menu_container.shadow-divider
    .ui.container
      .item#menu_logo
        = image_tag 'logo.svg', class: 'ui small image'
      .right.menu
        %a.item{:href => "#header"}= t(:home)
        %a.item{:href => "#about"}= t(:about)
        .item.dropdown
          %a= t(:services)
          .dropdown-content
            %a{ :href => "#view-story", :style => "color: black; padding: 8px" }
              CI
            %a{ :href => "#view-ci", :style => "color: black; padding: 8px" }
              Storytelling
            %a{ :href => "#view-ccs", :style => "color: black; padding: 8px" }
              CCS
        %a.item{:href => "#contact"}= t(:contact)
        %a.item{:href => "/"} Spanish
#hero
  .my-slider
    .slide{ :style => "background-image: url('../images/slider_1.jpg'); height: 100vh;" }
      .ui.container
        %h1.header=t(:slide1)
        %button.button
          .text
            = t(:more)
    .slide{ :style => "background-image: url('../images/image_6.jpeg'); height: 100vh;" }
      .ui.container
        %h1.header=t(:slide1)
        %button.button
          .text
            = t(:more)
