      %p= t(:about_t3_p8)
      %p= t(:about_t3_p9)
      %h4= t(:about_t3_p10)
#services
  .intro.ui.container
    %h1.header= t(:services_title)
    .ui.three.column.grid
      .column
        = image_tag('ciq_icon.svg', class: 'ui centered small image', style: 'height: 150px')
        %h4.title= t(:communication_title)
      .column
        = image_tag('story_icon.svg', class: 'ui centered small image', style: 'height: 150px')
        %h4.title= t(:story_title, class: 'ui centered small image')
      .column
        = image_tag('ccs_icon.svg', class: 'ui centered small image', style: 'height: 150px')
        %h4.title= t(:ccs_title, class: 'ui centered small image')
  .ui.divider.shadow-divider{ :style => "margin: 0; position: relative;" }
  .section--service.shadow-divider
    .content{ :style => "background-image: url('../images/image_7.jpg'); position: relative;" }
      .ui.grid.container
        .two.wide.column
          = image_tag('ciq_icon.svg', class: 'ui small image')
        .fourteen.wide.column
          %h2.title= t(:communication_title)
          %h3.subtitle= t(:communication_subtitle)
          .quote= t(:communication_author)
          %p= t(:communication_p1)
          %p= t(:communication_p2)
          %p= t(:communication_p3)
          %p= t(:communication_p4)
          %button.button#view-ci
            .text
              = t(:read_more)
          #more-ci{ :style => "display: none;"}
            %ul.leaf
              %li= t(:comp4_list_1)
              %li= t(:comp4_list_2)
              %li= t(:comp4_list_3)
              %li= t(:comp4_list_4)
              %li= t(:comp4_list_5)
              %li= t(:comp4_list_6)
            %p= t(:communication_p5)
            %p= t(:communication_p5_p1)
            %p= t(:communication_p5_p2)
  .section--service.shadow-divider
    .content{ :style => "background-image: url('../images/image_8.jpg'); position: relative; z-index: 0;" }
      .ui.grid.container
        .two.wide.column
          = image_tag('story_icon.svg', class: 'ui small image')
        .fourteen.wide.column
          %h2.title= t(:story_title_complete)
          %h3.subtitle= t(:story_subtitle)
          .quote= t(:story_quote)
          %p= t(:story_p1)
          %h4= t(:story_title_1)
          %button.button#view-story
            .text
              = t(:read_more)
          #more-story{ :style => "display: none;"}
            %h4= t(:story_title_2)
            %ul.leaf
              %li= t(:story_li_1)
              %li= t(:story_li_2)
              %li= t(:story_li_3)
              %li= t(:story_li_4)
  .section--service.shadow-divider
    .content{ :style => "background-image: url('../images/image_9.jpg'); position: relative;" }
      .ui.grid.container
        .two.wide.column
          = image_tag('ccs_icon.svg', class: 'ui small image')
        .fourteen.wide.column
          %h2.title= t(:ccs_title_complete)
          %h3.subtitle= t(:ccs_subtitle)
          .quote= t(:ccs_quote)
          %p= t(:ccs_p1)
          %p= t(:ccs_p2)
          %button.button#view-ccs
            .text
              = t(:read_more)
          #more-ccs{ :style => "display: none;"}
            %ul.leaf
              %li= t(:ccs_li_1)
              %li= t(:ccs_li_2)
              %li= t(:ccs_li_3)
              %li= t(:ccs_li_4)
#contact
  .ui.grid.container.biography
    .sixteen.wide.column
      %h3= t(:bio_title)
    .four.wide.column
      = image_tag('clara_2.jpeg', class: 'ui centered circular image')
    .twelve.wide.column
      %p= t(:bio_1)
      %p= t(:bio_2)
      %p= t(:bio_3)
      %p= t(:bio_4)
      %p= t(:bio_5)
      %p= t(:bio_6)
  .ui.hidden.divider.shadow-divider
  .ui.grid.container.contact_info
    .four.wide.column
      %h3.title= t(:contact_title)
      %p= t(:contact_mail)
      %p= t(:contact_number)
      %p= t(:contact_address_1)
      %p= t(:contact_address_2)
      %a{:href => "https://www.linkedin.com/in/clarabeleiro/", :target =>"_blank", style: 'margin-right: 16px'}
        %img(src="../images/linkedin_icon.svg")
    .twelve.wide.column
      %form.ui.form{:action => "mailto:clarabeleiro@cbnetwork.com.ar", :enctype => "text/plain", :method => "post"}
        .field
          = t(:form_name)
          %input{:name => "name", :type => "text"}/
        .field
          = t(:form_mail)
          %input{:mail => "mail", :type => "text"}/
        .field
          = t(:phone)
          %input{:mail => "mail", :type => "text"}/
        .field
          = t(:form_message)
          %input{:comment => "comment", :size => "50", :type => "text"}/
        .field
          %input{:type => "submit", :value => "Send", :class => "ui button"}/


#footer
  = image_tag 'logo.svg', class: 'ui small centered image'
:javascript
  $('.ui.dropdown.item')
    .dropdown()
  ;
  var slider = tns({
    container: '.my-slider',
    items: 1,
    slideBy: 1,
    autoplay: true,
    controls: false,
    nav: false,
    autoplayButtonOutput: false
    });
  var viewStory = document.querySelector("#view-story");
  viewStory.addEventListener("click", function(e) {
    var story = document.querySelector("#more-story");
    $(story).css('display', 'block');
  });
  var viewCI = document.querySelector("#view-ci");
  viewCI.addEventListener("click", function(e) {
    var ci = document.querySelector("#more-ci");
    $(ci).css('display', 'block');
  });
  var viewCCS = document.querySelector("#view-ccs");
  viewCCS.addEventListener("click", function(e) {
    var ccs = document.querySelector("#more-ccs");
    $(ccs).css('display', 'block');
  });